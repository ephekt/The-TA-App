<% form_for(@note) do |f| %>
  <%= f.error_messages %>
  
  <div style='font-size:14px;'>
    Create a new note for a 
    <select id="note_for" name="note_for" onchange="toggle_picker(this)">
      <option value="student">Student</option>
      <option value="group">Group</option>
    </select>
  </div>
  <br />
  <div id='student_select'>
    Student: <%= select_tag "student_id", options_from_collection_for_select(Student.find(:all), 'id', 'name') %>
  </div>
  <div id='group_select' style="display:none;">  
    Group: <%= select_tag "group_id", options_from_collection_for_select(Group.find(:all), 'id', 'name') %>
  </div>
  <p>
    <%= f.label :text %><br />
    <%= f.text_area :text, :class => 'note_text_input' %>
  </p>
  
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', notes_path %>